<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/time_imageview"
        android:layout_marginTop="10dp"
        android:background="@drawable/timer"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/trip_summary_list_address"
        android:textSize="15dp"
        android:layout_alignTop="@+id/time_imageview"
        android:layout_toRightOf="@+id/time_imageview"
        android:layout_toEndOf="@+id/time_imageview"
        android:layout_marginLeft="20dp"
        android:textColor="#424242" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/trip_summary_list_date_and_time"
        android:textSize="13dp"
        android:layout_below="@+id/trip_summary_list_address"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />



</RelativeLayout>