<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mainpagebackgrouncdimg"
            android:src="@drawable/driverlogo"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btn_signin"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/button_curve_background_blue"
            android:textColor="#ffffff"
            android:layout_marginBottom="25dp"
            android:text="@string/cabily_driver_main_lable_signin_Textview"
            android:textSize="15sp"
            />




        <Button
            android:id="@+id/btn_register"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_curve_background_blue"
            android:layout_marginRight="18dp"
            android:textColor="#ffffff"
            android:layout_marginBottom="25dp"
            android:text="@string/cabily_driver_main_lable_register_Textview"
            android:textSize="15sp"
            />






    </RelativeLayout>
</RelativeLayout>
